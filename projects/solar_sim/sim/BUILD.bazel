load("//common/python:defs.bzl", "py_binary", "py_library", "py_test")

package(default_visibility = ["//visibility:public"])

py_binary(
    name = "main",
    srcs = ["main.py"],
    deps = [
        ":const",
        ":solver",
        ":system",
        ":util",
        "@third_party_py//astropy",
        "@third_party_py//jplephem",
        "@third_party_py//progress",
    ],
)

py_library(
    name = "solver",
    srcs = ["solver.py"],
    deps = ["@third_party_py//numpy"],
)

py_library(
    name = "const",
    srcs = ["const.py"],
    data = [
        "//projects/solar_sim/data",
    ],
    deps = [
        "@third_party_py//jplephem",
    ],
)

py_test(
    name = "const_test",
    srcs = ["const.py"],
    main = "const.py",
    deps = [":const"],
)

py_library(
    name = "system",
    srcs = ["system.py"],
    deps = [
        ":const",
        ":util",
        "@third_party_py//astropy",
        "@third_party_py//jplephem",
        "@third_party_py//progress",
    ],
)

py_library(
    name = "util",
    srcs = ["util.py"],
    deps = [
        ":const",
        "@third_party_py//pyyaml",
    ],
)

py_library(
    name = "plotter",
    srcs = ["plotter.py"],
    deps = [
        ":const",
        "@third_party_py//matplotlib",
    ],
)
